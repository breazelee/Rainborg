<scene>
    <description text="Test scene for PBF Sim"/>

    <maxsimfreq max="100.0"/>
    <duration time="120.0"/>
    <viewport width="500" height="500" />
    <camera cx="0.0" cy="0.0" cz="0.0"
            fov="45"
            />

    <stepper dt="0.01"/>

    <fluidsimplegravityforce fx="0" fy="-10.0" fz="0.0"/>

